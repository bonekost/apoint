!!!
%html.h-full.bg-gray-100
  %head
    %meta{content: "text/html; charset=UTF-8", "http-equiv": "Content-Type"}/
    %title= content_for(:title) || "Apoint"
    %meta{content: "width=device-width,initial-scale=1", name: "viewport"}/
    = csrf_meta_tags
    = csp_meta_tag
    = stylesheet_link_tag "frontend"
    = javascript_include_tag "frontend", type: "module"

  %body.h-full
    %header.bg-white.shadow
      %nav.mx-auto.max-w-7xl.px-4.sm:px-6.lg:px-8
        .flex.h-16.justify-between.items-center
          = link_to root_path, class: 'flex items-center flex-shrink-0' do
            %span.text-xl.font-bold.text-gray-900 Apoint
          .flex.items-center.gap-4
            - if user_signed_in?
              .relative.group
                = link_to edit_user_registration_path, class: 'inline-flex items-center px-3 py-2 text-sm font-medium text-gray-700 hover:text-gray-900' do
                  %span Profile
              = button_to destroy_user_session_path, method: :delete, class: 'rounded-md bg-white px-3 py-2 text-sm font-semibold text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 hover:bg-gray-50' do
                Logout
            - else
              = link_to 'Login', new_user_session_path, class: 'text-gray-700 hover:text-gray-900 px-3 py-2 text-sm font-medium'
              = link_to 'Sign Up', new_user_registration_path, class: 'rounded-md bg-indigo-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600'

    %main.py-4
      .mx-auto.max-w-7xl.sm:px-6.lg:px-8
        - if notice
          .rounded-md.bg-green-50.p-4.mb-4
            .flex
              .flex-shrink-0
                %svg.h-5.w-5.text-green-400{"aria-hidden": "true", fill: "currentColor", viewbox: "0 0 20 20"}
                  %path{clip: "evenodd", d: "M10 18a8 8 0 100-16 8 8 0 000 16zm3.857-9.809a.75.75 0 00-1.214-.882l-3.483 4.79-1.88-1.88a.75.75 0 10-1.06 1.061l2.5 2.5a.75.75 0 001.137-.089l4-5.5z", "fill-rule": "evenodd"}
              .ml-3
                %p.text-sm.font-medium.text-green-800= notice
        - if alert
          .rounded-md.bg-red-50.p-4.mb-4
            .flex
              .flex-shrink-0
                %svg.h-5.w-5.text-red-400{"aria-hidden": "true", fill: "currentColor", viewbox: "0 0 20 20"}
                  %path{clip: "evenodd", d: "M10 18a8 8 0 100-16 8 8 0 000 16zM8.28 7.22a.75.75 0 00-1.06 1.06L8.94 10l-1.72 1.72a.75.75 0 101.06 1.06L10 11.06l1.72 1.72a.75.75 0 101.06-1.06L11.06 10l1.72-1.72a.75.75 0 00-1.06-1.06L10 8.94 8.28 7.22z", "fill-rule": "evenodd"}
              .ml-3
                %p.text-sm.font-medium.text-red-800= alert
                
        = yield

    %footer.bg-white.mt-auto
      .mx-auto.max-w-7xl.px-4.py-6.sm:px-6.lg:px-8
        %p.text-center.text-sm.text-gray-500
